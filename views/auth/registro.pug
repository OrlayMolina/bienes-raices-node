extends ../layout/index

block contenido
    .py-8
        h1.text-4xl.my-10.font-extrabold.text-center.font-sans Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-xl
                form
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre ..." type="text" name="nombre")
                    div
                        label.mt-5.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Tu Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre ..." type="email" name="email")
                    div
                        label.mt-5.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Tu Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre ..." type="password" name="password")