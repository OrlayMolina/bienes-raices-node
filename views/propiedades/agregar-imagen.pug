extends ../layout/admin

block styles

block contenido
    .py-5
        h1.text-4xl.my-10.font-extrabold.text-center.font-sans Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.rounded-xl.text-sm.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow-lg py-8 px-4 rounded-xl  mx-auto max-w-4xl my-10 md:px-10")

            form.space-y-8(method="POST" action="/propiedades/crear")
                input(type="hidden" name="_csrf" value= csrfToken)

                input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 shadow-lg rounded-xl text-white font-bold uppercase cursor-pointer" type="submit" value="Publicar Propiedad")


block scripts