header.bg-indigo-500.p-3.shadow-lg
    .container.mx-auto.flex.justify-between.items-center
        a(href="/")
            h1.text-3xl.text-white.font-extrabold.text-center Bienes
                span.font-normal Raices

        nav(class="my-5 text-lg md:flex md:items-center font-bold md:gap-6 text-white")
            a(href="/auth/registro") Crear Cuenta
            a(href="/auth/login") Iniciar Sesión 

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categorias/1" class="text-md font-bold uppercase text-white") Casas
            a(href="/categorias/2" class="text-md font-bold uppercase text-white") Apartamentos
            a(href="/categorias/3" class="text-md font-bold uppercase text-white") Bodegas
